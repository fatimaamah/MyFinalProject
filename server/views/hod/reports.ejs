<%
  const title = 'All Reports - HOD';
  const body = `
    <div class="row mb-4">
      <div class="col-12">
        <h2><i class="bi bi-file-earmark-text me-2"></i>All Reports</h2>
        <p class="text-muted">View and monitor all reports in your department</p>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <form action="/hod/reports" method="GET" class="row g-3">
          <div class="col-md-4">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
              <option value="">All Statuses</option>
              <option value="pending" ${filters.status === 'pending' ? 'selected' : ''}>Pending</option>
              <option value="feedback_given" ${filters.status === 'feedback_given' ? 'selected' : ''}>Feedback Given</option>
              <option value="approved" ${filters.status === 'approved' ? 'selected' : ''}>Approved</option>
              <option value="rejected" ${filters.status === 'rejected' ? 'selected' : ''}>Rejected</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Supervisor</label>
            <select class="form-select" name="supervisor">
              <option value="">All Supervisors</option>
              <% supervisors.forEach(supervisor => { %>
                <option value="<%= supervisor.id %>" ${filters.supervisor === supervisor.id ? 'selected' : ''}>
                  <%= supervisor.full_name %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-funnel me-1"></i>Filter
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <% if (reports && reports.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Student</th>
                  <th>Supervisor</th>
                  <th>Title</th>
                  <th>Stage</th>
                  <th>Status</th>
                  <th>Submitted</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% reports.forEach(report => { %>
                  <tr>
                    <td><%= report.student.full_name %></td>
                    <td><%= report.supervisor.full_name %></td>
                    <td><%= report.title %></td>
                    <td><span class="badge bg-info"><%= report.report_stage.replace('_', ' ').toUpperCase() %></span></td>
                    <td>
                      <% if (report.status === 'pending') { %>
                        <span class="badge bg-warning text-dark">Pending</span>
                      <% } else if (report.status === 'approved') { %>
                        <span class="badge bg-success">Approved</span>
                      <% } else if (report.status === 'rejected') { %>
                        <span class="badge bg-danger">Rejected</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Feedback Given</span>
                      <% } %>
                    </td>
                    <td><%= new Date(report.submitted_at).toLocaleDateString() %></td>
                    <td>
                      <a href="/hod/report/${report.id}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> View
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center py-4">No reports found</p>
        <% } %>
      </div>
    </div>
  `;
%>
<%- include('../layouts/main', { title, body, user }) %>
