<%
  const title = 'Students - HOD';
  const body = `
    <div class="row mb-4">
      <div class="col-12">
        <h2><i class="bi bi-people me-2"></i>Students</h2>
        <p class="text-muted">All students in your department</p>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <% if (students && students.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Level</th>
                  <th>Supervisor</th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student => { %>
                  <tr>
                    <td><%= student.full_name %></td>
                    <td><%= student.email %></td>
                    <td><span class="badge bg-info"><%= student.level %> Level</span></td>
                    <td>
                      <% if (student.supervisor) { %>
                        <%= student.supervisor.full_name %>
                      <% } else { %>
                        <span class="text-muted">Not Assigned</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center py-4">No students in your department</p>
        <% } %>
      </div>
    </div>
  `;
%>
<%- include('../layouts/main', { title, body, user }) %>
