<div class="sidebar d-flex flex-column p-3 shadow-sm" style="width: 250px; background: #fff;">
  <div class="text-center mb-4">
    <h5 class="fw-bold text-primary">
      <i class="bi bi-gear-wide-connected me-2"></i>
      <%= 
        user.role === 'general_admin' ? 'Admin Panel' :
        user.role === 'level_coordinator' ? 'Coordinator Panel' :
        user.role === 'hod' ? 'HOD Panel' :
        user.role === 'supervisor' ? 'Supervisor Panel' :
        user.role === 'student' ? 'Student Panel' :
        'Panel'
      %>
    </h5>
  </div>

  <nav class="nav flex-column">
    <% if (user.role === 'general_admin') { %>
      <a class="nav-link <%= title.includes('Dashboard') ? 'active fw-bold text-primary' : '' %>" href="/admin/dashboard">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
      </a>

      <div class="mt-3 mb-2 fw-semibold text-muted small px-3">User Management</div>
      <a class="nav-link" href="/admin/manage-users">
        <i class="bi bi-person-plus me-2"></i>All Users
      </a>
      <a class="nav-link" href="/admin/view-students">
        <i class="bi bi-mortarboard me-2"></i>Students
      </a>
      <a class="nav-link" href="/admin/view-supervisors">
        <i class="bi bi-person-workspace me-2"></i>Supervisors
      </a>
      <a class="nav-link" href="/admin/view-coordinators">
        <i class="bi bi-people me-2"></i>Coordinators
      </a>
      <a class="nav-link" href="/admin/view-hods">
        <i class="bi bi-person-badge me-2"></i>HODs
      </a>

      <div class="mt-3 mb-2 fw-semibold text-muted small px-3">System</div>
      <a class="nav-link" href="/admin/activity-logs">
        <i class="bi bi-clock-history me-2"></i>Activity Logs
      </a>
      <a class="nav-link text-danger" href="/logout">
        <i class="bi bi-box-arrow-right me-2"></i>Logout
      </a>

    <% } else if (user.role === 'level_coordinator') { %>
      <a class="nav-link" href="/coordinator/dashboard">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
      </a>
      <a class="nav-link" href="/coordinator/progress-overview">
        <i class="bi bi-graph-up me-2"></i>Progress Overview
      </a>

    <% } else if (user.role === 'hod') { %>
      <a class="nav-link" href="/hod/dashboard">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
      </a>
      <a class="nav-link" href="/hod/students">
        <i class="bi bi-people me-2"></i>Students
      </a>
      <a class="nav-link" href="/hod/reports">
        <i class="bi bi-file-earmark-text me-2"></i>Reports
      </a>

    <% } else if (user.role === 'supervisor') { %>
      <a class="nav-link" href="/supervisor/dashboard">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
      </a>

    <% } else if (user.role === 'student') { %>
      <a class="nav-link" href="/student/dashboard">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard
      </a>
      <a class="nav-link" href="/student/upload-report">
        <i class="bi bi-cloud-upload me-2"></i>Upload Report
      </a>
    <% } %>
  </nav>
</div>
