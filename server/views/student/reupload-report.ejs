<%
  const title = 'Reupload Report';
  const body = `
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="bi bi-arrow-repeat me-2"></i>Reupload Report</h5>
          </div>
          <div class="card-body">
            <div class="alert alert-info">
              <strong>Current Report:</strong> ${report.title}<br>
              <strong>Version:</strong> v${report.version}<br>
              <strong>Stage:</strong> ${report.report_stage.replace('_', ' ').toUpperCase()}
            </div>
            ${error ? `
              <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>${error}
              </div>
            ` : ''}
            <form action="/student/reupload/${report.id}" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <label class="form-label">Upload New Version</label>
                <input type="file" class="form-control" name="report" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required>
                <small class="text-muted">This will be version ${report.version + 1}. Accepted formats: PDF, DOC, DOCX, JPG, PNG (Max 10MB)</small>
              </div>
              <div class="d-flex justify-content-between">
                <a href="/student/report/${report.id}" class="btn btn-secondary">
                  <i class="bi bi-arrow-left me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-cloud-upload me-1"></i>Reupload Report
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  `;
%>
<%- include('../layouts/main', { title, body, user }) %>
