<%
  const title = 'Supervisor Dashboard';
  const body = `
    <div class="row mb-4">
      <div class="col-12">
        <h2><i class="bi bi-speedometer2 me-2"></i>Supervisor Dashboard</h2>
        <p class="text-muted">Manage your assigned students and their reports</p>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <div class="card stat-card">
          <div class="card-body">
            <h3 class="card-title">${students ? students.length : 0}</h3>
            <p class="card-text">Assigned Students</p>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <div class="card stat-card">
          <div class="card-body">
            <h3 class="card-title">${recentReports ? recentReports.filter(r => r.status === 'pending').length : 0}</h3>
            <p class="card-text">Pending Reports</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-people me-2"></i>My Students</h5>
      </div>
      <div class="card-body">
        <% if (students && students.length > 0) { %>
          <div class="row">
            <% students.forEach(student => { %>
              <div class="col-md-6 mb-3">
                <div class="card">
                  <div class="card-body">
                    <h6 class="card-title">${student.full_name}</h6>
                    <p class="card-text mb-2">
                      <small class="text-muted">${student.email}</small><br>
                      <span class="badge bg-info">${student.level} Level</span>
                      <span class="badge bg-secondary">${student.department}</span>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <small>
                          <i class="bi bi-file-earmark-text me-1"></i>${student.reportsCount} Reports
                          <span class="text-warning ms-2">
                            <i class="bi bi-clock me-1"></i>${student.pendingCount} Pending
                          </span>
                        </small>
                      </div>
                      <a href="/supervisor/student/${student.id}" class="btn btn-sm btn-primary">
                        <i class="bi bi-eye"></i> View
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-muted text-center py-4">No students assigned yet</p>
        <% } %>
      </div>
    </div>

    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Reports</h5>
      </div>
      <div class="card-body">
        <% if (recentReports && recentReports.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Student</th>
                  <th>Title</th>
                  <th>Stage</th>
                  <th>Status</th>
                  <th>Submitted</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% recentReports.forEach(report => { %>
                  <tr>
                    <td>${report.student.full_name}</td>
                    <td>${report.title}</td>
                    <td><span class="badge bg-info">${report.report_stage.replace('_', ' ').toUpperCase()}</span></td>
                    <td>
                      <% if (report.status === 'pending') { %>
                        <span class="badge bg-warning text-dark">Pending</span>
                      <% } else if (report.status === 'approved') { %>
                        <span class="badge bg-success">Approved</span>
                      <% } else if (report.status === 'rejected') { %>
                        <span class="badge bg-danger">Rejected</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Feedback Given</span>
                      <% } %>
                    </td>
                    <td>${new Date(report.submitted_at).toLocaleDateString()}</td>
                    <td>
                      <a href="/supervisor/report/${report.id}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> Review
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center py-4">No reports yet</p>
        <% } %>
      </div>
    </div>
  `;
%>
<%- include('../layouts/main', { title, body, user }) %>
