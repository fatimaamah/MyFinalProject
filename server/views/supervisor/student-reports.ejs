<%
  const title = 'Student Reports';
  const body = `
    <div class="row mb-4">
      <div class="col-12">
        <a href="/supervisor/dashboard" class="btn btn-outline-secondary mb-3">
          <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
        <h2><i class="bi bi-person me-2"></i>${student.full_name}</h2>
        <p class="text-muted">${student.email} | ${student.level} Level | ${student.department}</p>
      </div>
    </div>

    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Submitted Reports</h5>
      </div>
      <div class="card-body">
        <% if (reports && reports.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Stage</th>
                  <th>Version</th>
                  <th>Status</th>
                  <th>Submitted</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% reports.forEach(report => { %>
                  <tr>
                    <td>${report.title}</td>
                    <td><span class="badge bg-info">${report.report_stage.replace('_', ' ').toUpperCase()}</span></td>
                    <td>v${report.version}</td>
                    <td>
                      <% if (report.status === 'pending') { %>
                        <span class="badge bg-warning text-dark">Pending Review</span>
                      <% } else if (report.status === 'approved') { %>
                        <span class="badge bg-success">Approved</span>
                      <% } else if (report.status === 'rejected') { %>
                        <span class="badge bg-danger">Rejected</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Feedback Given</span>
                      <% } %>
                    </td>
                    <td>${new Date(report.submitted_at).toLocaleDateString()}</td>
                    <td>
                      <a href="/supervisor/report/${report.id}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> Review
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center py-4">No reports submitted yet</p>
        <% } %>
      </div>
    </div>
  `;
%>
<%- include('../layouts/main', { title, body, user }) %>
