<div class="row mb-4">
  <div class="col-12">
    <h2><i class="bi bi-speedometer2 me-2"></i>General Admin Dashboard</h2>
    <p class="text-muted">System overview and user statistics</p>
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white shadow-sm">
      <div class="card-body">
        <h3><%= stats.coordinators %></h3>
        <p>Level Coordinators</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white shadow-sm">
      <div class="card-body">
        <h3><%= stats.supervisors %></h3>
        <p>Supervisors</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-dark shadow-sm">
      <div class="card-body">
        <h3><%= stats.students %></h3>
        <p>Students</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-danger text-white shadow-sm">
      <div class="card-body">
        <h3><%= stats.hods %></h3>
        <p>HODs</p>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center bg-white">
    <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Recent Users</h5>
    <a href="/admin/manage-users" class="btn btn-sm btn-outline-primary">
      <i class="bi bi-people"></i> Manage All
    </a>
  </div>
  <div class="card-body">
    <% if (recentUsers && recentUsers.length) { %>
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Level</th>
            <th>Joined</th>
          </tr>
        </thead>
        <tbody>
          <% recentUsers.forEach(u => { %>
            <tr>
              <td><%= u.full_name %></td>
              <td><%= u.email %></td>
              <td><span class="badge bg-secondary text-uppercase"><%= u.role %></span></td>
              <td><%= u.level || '-' %></td>
              <td><%= new Date(u.created_at).toLocaleDateString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-muted text-center py-3">No users found.</p>
    <% } %>
  </div>
</div>
