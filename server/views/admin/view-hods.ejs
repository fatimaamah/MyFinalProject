<div class="row mb-4">
  <div class="col-12">
    <h2><i class="bi bi-person-badge me-2"></i>Heads of Department</h2>
    <p class="text-muted">Manage all HOD accounts</p>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>HOD List</h5>
    
  </div>
  <div class="card-body">
    <% if (hods && hods.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Department</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% hods.forEach(hod => { %>
              <tr>
                <td><%= hod.full_name %></td>
                <td><%= hod.email %></td>
                <td><%= hod.department || 'â€”' %></td>
                <td><%= new Date(hod.created_at).toLocaleDateString() %></td>
                <td>
                  <form action="/admin/delete-user/<%= hod.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this HOD?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted text-center py-4">No HODs found.</p>
    <% } %>
  </div>
</div>
