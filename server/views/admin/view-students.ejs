<div class="row mb-4">
  <div class="col-12">
    <h2><i class="bi bi-people-fill me-2"></i>Students</h2>
    <p class="text-muted">Manage all student accounts</p>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Student List</h5>
  </div>
  <div class="card-body">
    <% if (students && students.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Department</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(student => { %>
              <tr>
                <td><%= student.full_name %></td>
                <td><%= student.email %></td>
                <td><%= student.phone || '—' %></td>
                <td><%= student.department || '—' %></td>
                <td><%= new Date(student.created_at).toLocaleDateString() %></td>
                <td>
                  <form action="/admin/delete-user/<%= student.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this student?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted text-center py-4">No students found.</p>
    <% } %>
  </div>
</div>
