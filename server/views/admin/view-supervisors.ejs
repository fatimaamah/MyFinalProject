<div class="row mb-4">
  <div class="col-12">
    <h2><i class="bi bi-person-badge-fill me-2"></i>Supervisors</h2>
    <p class="text-muted">Manage all supervisor accounts</p>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Supervisor List</h5>
    <a href="/admin/add-user?role=supervisor" class="btn btn-primary btn-sm">
      <i class="bi bi-person-plus me-1"></i>Add Supervisor
    </a>
  </div>
  <div class="card-body">
    <% if (supervisors && supervisors.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Department</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% supervisors.forEach(supervisor => { %>
              <tr>
                <td><%= supervisor.full_name %></td>
                <td><%= supervisor.email %></td>
                <td><%= supervisor.department || 'â€”' %></td>
                <td><%= new Date(supervisor.created_at).toLocaleDateString() %></td>
                <td>
                  <form action="/admin/delete-user/<%= supervisor.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this supervisor?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted text-center py-4">No supervisors found.</p>
    <% } %>
  </div>
</div>
