<div class="row mb-4">
  <div class="col-12">
    <h2><i class="bi bi-clock-history me-2"></i>Activity Logs</h2>
    <p class="text-muted">System-wide activity audit trail</p>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if (logs && logs.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>Date & Time</th>
              <th>User</th>
              <th>Action</th>
              <th>Entity Type</th>
            </tr>
          </thead>
          <tbody>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= new Date(log.created_at).toLocaleString() %></td>
                <td><%= log.user_name || 'System' %></td>
                <td><%= log.action %></td>
                <td><span class="badge bg-secondary"><%= log.entity_type %></span></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted text-center py-4">No activity logs yet.</p>
    <% } %>
  </div>
</div>
